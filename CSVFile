package PokemonShelter;
import java.io.*;
import com.opencsv.*;

public class CSVFile{

    public static void writeToData(String filePath, Adoptee adoptee){

        File file = new File(filePath);

        try{

            FileWriter outputfile = new FileWriter(file, true);

            CSVWriter writer = new CSVWriter(outputfile);

            //Adding a header to CSV with params
            String[] header = { "Name" , "Type" , "Cost Per Day" , "Date Added" , "Rehoming Date"};
            writer.writeNext(header);


            //Adding data to CSV
            String[] data = {
                adoptee.getName() ,
                adoptee.getType() ,
                adoptee.getCostPerDay() ,
                adoptee.getDateAdded() , 
                adoptee.getRehomingDate()};

                writer.writeNext(data);

                writer.close();
            System.out.println("Data added successfully!");
        }
        catch (IOException e) {
            // TODO auto-generated catch block
            e.printStackTrace();
        }

    }
    public static void readData(){

        String file = "src\\Adoptees.csv";
        BufferedReader reader = null;
        String line = "";

        try {
            reader = new BufferedReader(new FileReader(file));
            while((line = reader.readLine()) != null){

                String[] row = line.split(",");

                for (String index : row){
                    System.out.printf("%-10s", index);
                }
                System.out.println();
            }
        }
        catch(Exception e) {
            e.printStackTrace();
        }
        finally{

        }
    }


}